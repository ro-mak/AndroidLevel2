<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/time_text_view"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/history_item_horizontal_margin"
        android:layout_marginStart="@dimen/history_item_horizontal_margin" />
    <TextView
        android:id="@+id/city_name_text_view"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/history_item_horizontal_margin"
        android:layout_marginStart="@dimen/history_item_horizontal_margin" />
    <TextView
        android:id="@+id/weather_description_text_view"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/history_item_horizontal_margin"
        android:layout_marginStart="@dimen/history_item_horizontal_margin" />
</LinearLayout>